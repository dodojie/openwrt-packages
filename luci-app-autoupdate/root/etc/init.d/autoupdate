#!/bin/bash /etc/rc.common
START=99

run_autoupdate()
{
	local enable week minute hour
	config_get_bool enable $1 enable
	if [[ $enable == 1 ]]; then
		local minute
		local hour
		config_get week $1 week
		config_get minute $1 minute
		config_get hour $1 hour
		[[ $week == 7 ]] && week="*"
		bash /bin/AutoUpdate.sh --corn-del
		bash /bin/AutoUpdate.sh --corn task="-u" "$minute $hour * * $week"
	else
		bash /bin/AutoUpdate.sh --corn-del
	fi
	if [ -f /bin/AutoUpdate.sh ];then
		custom_github_url="$(uci get autoupdate.@login[0].github)"
		bash /bin/AutoUpdate.sh -C ${custom_github_url}
	fi
	/etc/init.d/cron restart
}

start()
{
	config_load autoupdate
	config_foreach run_autoupdate login
}

stop()
{
	bash /bin/AutoUpdate.sh --corn-del >/dev/null 2>&1
	bash /bin/AutoUpdate.sh --clean >/dev/null 2>&1
}

restart()
{
	stop
	start
}